<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotekaPro.Views.EditPage_new">
    <ContentPage.Content>
        <StackLayout Padding="15" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="User Update"
                VerticalOptions="CenterAndExpand"
                FontSize="Large"/>

            <Entry x:Name="entryId" IsVisible="false"></Entry>
            <Entry x:Name="entryName" Placeholder="Entry your name"></Entry>
            <Entry x:Name="entryEmail" Placeholder="Entry your email"></Entry>
            <Button Text="Update" x:Name="buttonUpdate" CornerRadius="15" Clicked="buttonUpdate_Clicked" ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>